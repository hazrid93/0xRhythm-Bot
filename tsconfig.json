{
    "compilerOptions": {
        "removeComments": false,
		"alwaysStrict": false,
        "strict": false,
        "target": "es2019",
        "moduleResolution": "node",
        "lib": ["ESNext", "DOM"],
        "module": "CommonJS",
        "outDir": "dist",
        "baseUrl": "./",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "inlineSources": true,
        "rootDir": "src",
        "sourceMap": true,
        "pretty": true,
        "allowJs": true,
        "incremental": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
        "declaration": true,
		"declarationMap": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
