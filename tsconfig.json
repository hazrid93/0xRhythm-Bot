{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["ES2019"],
        "outDir": "dist",
        "baseUrl": "./",
        "incremental": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
